<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @summaries.each do |summary| %>
      <tr>
        <td><%= summary.content %></td>
        <td><%= link_to 'Show', summary %></td>
        <td><%= link_to 'Edit', edit_summary_path(summary) %></td>
        <td><%= link_to 'Destroy', summary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  <tbody>
  <% i = 1 %>

    <% @searches.each do |search| %>

      <tr>
        <td><%= i %></td><% i += 1 %>
        <td><img src="<%= search['mediumImageUrl'] %>"></td>
        <td><a href="<%= search['itemUrl'] %>" target="_blank"><%= search['title'] %></a></td>
        <td><%= search['publisherName'] %></td>
      </tr>
    <% end %>

  </tbody>

  <% if @searches.present? %>

    <p><%= paginate @searches %></p>
  <% end %>


</table>

<br>

<%= link_to 'New summary', new_summary_path %>