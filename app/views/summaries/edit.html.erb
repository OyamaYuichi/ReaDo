<div class="container  summary-create-content">
  <%= form_with(model: @summary, local: true) do |form| %>
    <% if @summary.errors.any? %>
      <div id="error_explanation">
        <% @summary.errors.full_messages.each do |message| %>
          <h4><%= message %></h4>
        <% end %>
      </div>
    <% end %>

    <table class="summary-create-table">
      <tr class="book-detail">
        <td class="book-image">
          <%= image_tag(@book.image_url)%>
        </td>
        <td class="book-desc">
          <p>
            <span class="book-title"><%= t('view.title') %>　</span>
            <span class="book-ex"><%= @book.title%></span>
          </p>
          <p>
            <span class="book-title"><%= t('view.author') %>　　　</span>
            <span class="book-ex"><%= @book.author%></span>
          </p>
          <p>
            <span class="book-title"><%= t('view.publisher') %>　　</span>
            <span class="book-ex"><%= @book.publisher%></span>
          </p>
          <p class="create-category">
            <span class="book-title"><%= t('view.genre') %>　</span>
            <span>
              <%= form.select :category, Summary.categories_i18n.invert, include_blank: t('view.please_select') %>
            </span>
          </p>
        </td>
      </tr>
    </table>

    <hr>

    <div>
      <%= form.hidden_field :content, id: 'post_content' %>
      <trix-editor input="post_content"></trix-editor>
    </div>

    <div class="center">
      <%= form.submit t('view.update'), class:"search-submit" %>
    </div>
  <% end %>
</div>