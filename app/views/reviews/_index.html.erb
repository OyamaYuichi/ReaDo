  <% reviews.each do |review| %>
    <% if review.id.present? %>
      <div class="review-range">
        <div class="left-review">
          <p class="review-user"><%= link_to review.user.name, user_path(review.user) %></p>
          <p class="review-user-content"><%= review.content %></p>
        </div>
          <div class="review-content" id ="this_review_<%= review.id %>"></div>
        <div class="right-review">
          <%= link_to fa_icon("edit lg"), edit_book_review_path(book, review), remote: true %>　
          <%= link_to fa_icon("trash-alt lg"), book_review_path(review.book_id, review.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"} %>
        </div>
      </div>
    <% end %>
  <% end %>
